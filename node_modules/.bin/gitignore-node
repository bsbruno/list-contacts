#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/usr/bin/env" ]; then
  "$basedir/usr/bin/env" node "$basedir/../git-ignore-node/index.js" "$@"
  ret=$?
else 
  usr/bin/env node "$basedir/../git-ignore-node/index.js" "$@"
  ret=$?
fi
exit $ret
